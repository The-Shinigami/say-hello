pipeline {
    agent any
    triggers {
        pollSCM '* * * * *'
    }
    stages{
        
      stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }


      stage('deploy-server') {
            steps {
                dir('target') {
                  sh 'kill -9 $(lsof -t -i:8081) 2>error.log'
                  sh 'java -jar say-hello-0.0.1.jar'
               }
                
            }
        }
    }        
    
}
