pipeline {
    agent any
    triggers {
        pollSCM '* * * * *'
    }
    stages{
        
      stage('Build') {
                sh 'fuser -k 8081/tcp'
            steps {
                sh 'mvn clean package'
            }
        }
         stage('build-docker') {
            steps {
               dir('src') {
                         sh 'cp -r Dockerfile /var/lib/jenkins/workspace/say-hello/target/'
                }
             dir('target') {
                  sh 'docker build -t say-hello .'
                  }
            }
        }

      stage('deploy-server') {
            steps {
                sh 'docker run -p 8081:8081 say-hello:latest'

            }
        }
    }        
    
}
