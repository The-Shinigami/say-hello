pipeline {
    agent any
    triggers {
        pollSCM '* * * * *'
    }
    stages{
        
      stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

      stage('deploy') {
            steps {
                dir('target') {
                  sh 'java -jar say-hello-0.0.1.jar'
               }
                
            }
        }
    }        
    
}
